{
  "appId": "com.testelectronjs.app",
  "productName": "TestElectronJS",
  "files": [
    ".build-desktop/**/*",
    "node_modules",
    "package.json"
  ],
  "directories": {
    "buildResources": "source/assets",
    "output": ".package-desktop"
  },
  "win": {
    "target": "nsis",
    "icon": "source/assets/icons/icon.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "source/assets/icons/icon.icns"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "source/assets/icons"
  },
  "asar": true
}
