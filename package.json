{
  "name": "yu-gi-oh-card-editor",
  "displayName": "Yu-Gi-Oh! Card Editor",
  "version": "3.0.0",
  "description": "Un Ã©diteur de cartes Yu-Gi-Oh",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MathisNadin/Yu-Gi-Oh-Card-Editor.git"
  },
  "author": {
    "name": "Mathis Nadin",
    "email": "mathis.nadin@gmail.com"
  },
  "license": "MIT",
  "main": "./.build-desktop/main.js",
  "dbName": "card-editor-db",
  "objectStoreName": "card-editor-object-store",
  "scripts": {
    "start": "cross-env PORT=7000 npm run start:desktop",
    "build": "npm run build:desktop",
    "watch:client-apis": "node scripts/copy-api-to-clients.js",
    "watch:interfaces": "node scripts/build-api-interfaces.js",
    "watch:dev": "concurrently \"npm:watch:interfaces\" \"npm:watch:client-apis\"",
    "watch:server": "nodemon --watch source/ --exec \"ts-node -r tsconfig-paths/register source/server/index.ts\" -e ts,json",
    "watch:api": "concurrently \"npm:watch:server\" \"npm:watch:interfaces\" \"npm:watch:client-apis\"",
    "batch": "ts-node -r tsconfig-paths/register source/server",
    "start:desktop-preload": "cross-env NODE_ENV=development PLATFORM=desktop-preload TS_NODE_TRANSPILE_ONLY=true webpack --config webpack/index.ts",
    "start:desktop-main": "cross-env NODE_ENV=development PLATFORM=desktop-main electron scripts/start-desktop-main-dev.js",
    "start:desktop-renderer": "cross-env NODE_ENV=development PLATFORM=desktop-renderer webpack serve --config webpack/index.ts",
    "start:desktop-watch": "concurrently \"npm run start:desktop-renderer\" \"npm run start:desktop-main\"",
    "start:desktop": "cross-env NODE_ENV=development npm-run-all --serial start:desktop-preload start:desktop-watch",
    "build:desktop-main": "node scripts/build-platform.mjs desktop-main",
    "build:desktop-renderer": "node scripts/build-platform.mjs desktop-renderer",
    "build:desktop": "node scripts/build-platform.mjs desktop",
    "compile:desktop": "cross-env NODE_ENV=production npm run build:desktop && node scripts/clean-package-desktop.js && electron-builder build --publish never",
    "package:desktop": "cross-env NODE_ENV=production npm run build:desktop && node scripts/clean-package-desktop.js && electron-builder build --publish always",
    "start:web-standalone": "cross-env NODE_ENV=development PLATFORM=web-standalone webpack serve --config webpack/index.ts",
    "build:web-standalone": "node scripts/build-platform.mjs web-standalone",
    "watch:web-served": "cross-env NODE_ENV=development PLATFORM=web-served webpack --watch --config webpack/index.ts",
    "build:web-served": "node scripts/build-platform.mjs web-served",
    "build:web-server": "rm -rf ./.build && npx tsc -p tsconfig.build.json && npx tsc-alias -p tsconfig.build.json",
    "sync:database": "node scripts/sync-database.mjs",
    "sync:app-files": "node scripts/sync-app-files.mjs",
    "sync:platform": "npm run sync:database && npm run sync:app-files",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix \"./source/**/*.{js,jsx,ts,tsx,json}\" \"./webpack/**/*.{js,jsx,ts,tsx,json}\"",
    "lint:scss": "stylelint --allow-empty-input \"source/**/*.{css,scss}\" \"webpack/**/*.{css,scss}\"",
    "format": "prettier --write \"./source/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" \"./scripts/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" \"./webpack/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "validate": "npm run format && npm run lint && npm run lint:scss && npm run typecheck",
    "test": "jest",
    "list-dependencies": "node scripts/list-dependencies.mjs",
    "sync-dependencies": "node scripts/sync-dependencies.mjs",
    "update-changelog": "node scripts/update-changelog.mjs",
    "bump": "node scripts/bump-version.mjs"
  },
  "dependencies": {
    "@capacitor-community/sqlite": "^7.0.2",
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/camera": "^7.0.2",
    "@capacitor/core": "^7.4.4",
    "@capacitor/device": "^7.0.2",
    "@capacitor/ios": "^7.4.4",
    "@capacitor/keyboard": "^7.0.3",
    "@capacitor/network": "^7.0.2",
    "@capacitor/push-notifications": "^7.0.3",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@lexical/link": "^0.38.2",
    "@lexical/list": "^0.38.2",
    "@lexical/react": "^0.38.2",
    "@lexical/rich-text": "^0.38.2",
    "@lexical/selection": "^0.38.2",
    "@lexical/utils": "^0.38.2",
    "axios": "^1.13.2",
    "dompurify": "^3.3.0",
    "electron-dl": "^4.0.0",
    "electron-updater": "^6.6.2",
    "html-react-parser": "^5.2.10",
    "lexical": "^0.38.2",
    "marked": "^17.0.0",
    "os": "^0.1.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-image-crop": "^11.0.7",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.4",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "@types/copy-webpack-plugin": "^10.1.3",
    "@types/csp-html-webpack-plugin": "^3.0.5",
    "@types/dompurify": "^3.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/semver": "^7.7.1",
    "@types/webpack": "^5.28.5",
    "@types/webpack-node-externals": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "cross-env": "^10.1.0",
    "csp-html-webpack-plugin": "^5.1.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "glob": "^12.0.0",
    "html-webpack-plugin": "^5.6.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.4",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "raw-loader": "^4.0.2",
    "react-refresh": "^0.18.0",
    "sass": "^1.94.1",
    "sass-loader": "^16.0.6",
    "semver": "^7.7.3",
    "style-loader": "^4.0.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}