{
  "name": "yu-gi-oh-card-editor",
  "displayName": "Yu-Gi-Oh! Card Editor",
  "version": "2.0.4",
  "description": "Un Ã©diteur de cartes Yu-Gi-Oh",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MathisNadin/Yu-Gi-Oh-Card-Editor.git"
  },
  "author": {
    "name": "Mathis Nadin",
    "email": "mathis.nadin@gmail.com"
  },
  "license": "MIT",
  "main": "./.build-desktop/main.js",
  "dbName": "card-editor-db",
  "objectStoreName": "card-editor-object-store",
  "presets": {
    "development": {
      "apiUrl": ""
    },
    "production": {
      "apiUrl": ""
    }
  },
  "scripts": {
    "start:desktop-preload": "cross-env NODE_ENV=development PLATFORM=desktop-preload TS_NODE_TRANSPILE_ONLY=true webpack --config webpack/webpack.config.ts",
    "start:desktop-main": "cross-env NODE_ENV=development PLATFORM=desktop-main electron scripts/start-desktop-main-dev.js",
    "start:desktop-renderer": "cross-env NODE_ENV=development PLATFORM=desktop-renderer webpack serve --config webpack/webpack.config.ts",
    "start:desktop-watch": "concurrently \"npm run start:desktop-renderer\" \"npm run start:desktop-main\"",
    "start:desktop": "cross-env NODE_ENV=development npm-run-all --serial start:desktop-preload start:desktop-watch",
    "build:desktop-main": "cross-env NODE_ENV=production PLATFORM=desktop-main TS_NODE_TRANSPILE_ONLY=true webpack --config webpack/webpack.config.ts",
    "build:desktop-renderer": "cross-env NODE_ENV=production PLATFORM=desktop-renderer TS_NODE_TRANSPILE_ONLY=true webpack --config webpack/webpack.config.ts",
    "build:desktop": "cross-env NODE_ENV=production node scripts/clean-build-desktop.js && concurrently \"npm run build:desktop-main\" \"npm run build:desktop-renderer\"",
    "package:desktop": "cross-env NODE_ENV=production npm run build:desktop && node scripts/clean-package-desktop.js && electron-builder build --publish never",
    "start:web": "cross-env NODE_ENV=development PLATFORM=web webpack serve --config webpack/webpack.config.ts",
    "build:web": "cross-env NODE_ENV=production PLATFORM=web webpack --config webpack/webpack.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix \"./source/**/*.{js,jsx,ts,tsx,json}\"",
    "format": "prettier --write \"./source/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "validate": "npm run format && npm run lint && npm run typecheck"
  },
  "dependencies": {
    "electron-dl": "=3.5.0"
  },
  "devDependencies": {
    "@capacitor-community/sqlite": "=6.0.0-alpha.1",
    "@capacitor/android": "=6.0.0",
    "@capacitor/app": "=6.0.0",
    "@capacitor/camera": "=6.0.0",
    "@capacitor/cli": "=6.0.0",
    "@capacitor/core": "=6.0.0",
    "@capacitor/device": "=6.0.0",
    "@capacitor/ios": "=6.0.0",
    "@capacitor/keyboard": "=6.0.0",
    "@capacitor/network": "=6.0.0",
    "@capacitor/push-notifications": "=6.0.0",
    "@capacitor/splash-screen": "=6.0.0",
    "@capacitor/status-bar": "=6.0.0",
    "@pmmmwh/react-refresh-webpack-plugin": "=0.5.11",
    "@types/node": "=18.15.7",
    "@types/node-sass": "=4.11.3",
    "@types/react": "=18.0.27",
    "@types/react-dom": "=18.0.10",
    "@types/webpack": "=5.28.5",
    "@types/webpack-dev-server": "=4.7.2",
    "@types/webpack-node-externals": "=3.0.4",
    "@typescript-eslint/eslint-plugin": "=6.19.1",
    "@typescript-eslint/parser": "=6.19.1",
    "axios": "=1.6.7",
    "cheerio": "=1.0.0-rc.12",
    "concurrently": "=8.2.2",
    "cross-env": "=7.0.3",
    "css-loader": "=6.9.1",
    "css-minimizer-webpack-plugin": "=6.0.0",
    "electron": "=28.1.1",
    "electron-builder": "=24.13.3",
    "electronmon": "=2.0.2",
    "eslint": "=8.56.0",
    "eslint-config-prettier": "=9.1.0",
    "eslint-plugin-import": "=2.29.1",
    "eslint-plugin-jsx-a11y": "=6.8.0",
    "eslint-plugin-prettier": "=5.1.3",
    "eslint-plugin-react": "=7.33.2",
    "eslint-plugin-react-hooks": "=4.6.0",
    "html-webpack-plugin": "=5.6.0",
    "html2canvas": "=1.4.1",
    "husky": "=4.3.8",
    "mini-css-extract-plugin": "=2.8.0",
    "node-sass": "=9.0.0",
    "nodemon": "=3.0.2",
    "npm-run-all": "=4.1.5",
    "prettier": "=3.2.4",
    "react": "=18.2.0",
    "react-image-crop": "=11.0.5",
    "react-refresh": "=0.14.0",
    "react-router-dom": "=6.21.2",
    "sass": "=1.70.0",
    "sass-loader": "=14.0.0",
    "style-loader": "=3.3.4",
    "terser-webpack-plugin": "=5.3.10",
    "ts-loader": "=9.5.1",
    "ts-node": "=10.9.2",
    "tsconfig-paths-webpack-plugin": "=4.1.0",
    "typescript": "=5.3.3",
    "webpack": "=5.89.0",
    "webpack-cli": "=5.1.4",
    "webpack-dev-server": "=4.15.1",
    "webpack-merge": "=5.10.0",
    "webpack-node-externals": "=3.0.0"
  }
}
